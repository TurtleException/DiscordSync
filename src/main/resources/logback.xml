<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="de.eldritch.spigot.DiscordSync.discord.LogbackAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss}     JDA]: %boldCyan(%-34.-34thread) %red(%10.10X{jda.shard}) %boldGreen(%-15.-15logger{0}) %highlight(%-6level) %msg%n</pattern>
        </encoder>
    </appender>

    <root level="all">
        <appender-ref ref="STDOUT" />
    </root>

    <property name="root.level.console" value="OFF" />
</configuration>